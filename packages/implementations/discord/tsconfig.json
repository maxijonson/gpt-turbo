{
    "compilerOptions": {
        "module": "Node16",
        "moduleResolution": "node16",
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "incremental": true,
        "skipLibCheck": true,
        "strict": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "strictBindCallApply": false,
        "forceConsistentCasingInFileNames": false,
        "noFallthroughCasesInSwitch": false
    }
}
